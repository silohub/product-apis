inputSpec: openapi/{{{ API }}}.yaml
generatorName: java-micronaut-client
outputDir: build/client-packages/java/{{{ API }}}
templateDir: .silohub/templates/client-java-packages/generator
#
generateControllerAsAbstract: true
hideGenerationTimestamp: true
build: gradle
artifactId: {{{ API }}}
groupId: ag.silohub.openapi.client
apiPackage: ag.silohub.openapi.client.{{{ API_TRANSLATED }}}
modelPackage: ag.silohub.openapi.model
#
globalProperties:
  verbose: true
  apiTests: false
  apiDocs: false
  modelTests: false
  modelDocs: false
#
# estos datos sirven más que nada para publicar, no se guardan en el código generado
additionalProperties:
  micronautVersion: 3.1.1
  shghUser: {{{ SHGH_USER }}}
  shghToken: {{{ SHGH_TOKEN }}}
  shApiClientId: {{{ API_CLIENT_ID }}}
  shApiGroup: {{{ API_GROUP }}}
#
typeMappings:
  DateTime: java.time.OffsetDateTime
  LocalDateTime: java.time.OffsetDateTime
importMappings:
  DateTime: java.time.OffsetDateTime
  LocalDateTime: java.time.OffsetDateTime
